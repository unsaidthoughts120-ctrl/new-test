import fetch from "node-fetch";

export default async function handler(req, res) {
  if(req.method==="POST"){
    const { message, username, section, grade } = req.body;
    const TELEGRAM_TOKEN = process.env.TELEGRAM_TOKEN;
    const TELEGRAM_CHAT_ID = process.env.TELEGRAM_CHAT_ID;

    const text = `Anonymous Message:\n\n${message}\n\nUsername: ${username}\nSection: ${section||"-"}\nGrade: ${grade||"-"}`;

    try{
      const response = await fetch(`https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage`, {
        method:"POST",
        headers:{"Content-Type":"application/json"},
        body: JSON.stringify({ chat_id: TELEGRAM_CHAT_ID, text })
      });
      const data = await response.json();
      if(!data.ok) throw new Error(data.description || "Failed to send message");
      res.status(200).json({ success:true });
    }catch(err){
      res.status(500).json({ error: err.message });
    }
  }else{
    res.status(405).json({ error:"Method not allowed" });
  }
}
